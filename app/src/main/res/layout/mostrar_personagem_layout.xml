<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarPersonagemActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="150sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/mimgPersonagem"
            android:src="@drawable/luffy"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15sp"
            android:background="@color/blue_ocean_alpha">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/luffy"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:id="@+id/mtxtPersonagem"/>

            <TextView
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="@string/desc_mugiwara"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:id="@+id/mdescPersonagem"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>